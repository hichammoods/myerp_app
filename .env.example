# Application Environment
NODE_ENV=development
APP_NAME=MyERP
APP_VERSION=1.0.0

# API Configuration
API_PORT=4000
API_HOST=0.0.0.0
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# Database Configuration
DATABASE_URL=postgresql://myerp:myerp_password@localhost:5432/myerp_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://:myerp_redis_password@localhost:6379
REDIS_TTL=3600

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=myerp-uploads
MINIO_REGION=us-east-1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=1h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRY=7d

# Email Configuration (Development uses Mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@myerp.local
EMAIL_FROM_NAME=MyERP System

# Email Configuration (Production Example)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DIR=./logs

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# PDF Generation
PDF_STORAGE_PATH=/tmp/pdfs
PDF_CLEANUP_INTERVAL=3600000

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9091

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=myerp-backups
BACKUP_ENCRYPTION_KEY=backup-encryption-key

# Feature Flags
FEATURE_MULTI_LANGUAGE=false
FEATURE_ADVANCED_REPORTING=false
FEATURE_CUSTOMER_PORTAL=false
FEATURE_AI_INSIGHTS=false

# External Services (Optional)
GOOGLE_MAPS_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
SENDGRID_API_KEY=
SLACK_WEBHOOK_URL=
SENTRY_DSN=

# Security
BCRYPT_ROUNDS=10
ALLOWED_ORIGINS=http://localhost:3000
SECURE_COOKIES=false
TRUST_PROXY=false
HELMET_ENABLED=true

# Development Tools
SWAGGER_ENABLED=true
GRAPHQL_PLAYGROUND_ENABLED=true
SEED_DATABASE=true