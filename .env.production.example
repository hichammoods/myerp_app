# Production Environment Configuration
# IMPORTANT: Copy this file to .env.production and update all values before deployment

# Application Environment
NODE_ENV=production
APP_NAME=MyERP
APP_VERSION=1.0.0

# Domain Configuration
DOMAIN=your-domain.com
FRONTEND_URL=https://your-domain.com
CORS_ORIGINS=https://your-domain.com

# API Configuration
API_PORT=4000
API_HOST=0.0.0.0

# Database Configuration (PostgreSQL)
POSTGRES_DB=myerp_db
POSTGRES_USER=myerp
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123
DATABASE_URL=postgresql://myerp:CHANGE_THIS_SECURE_PASSWORD_123@postgres:5432/myerp_db
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_SSL=false

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD_456@redis:6379
REDIS_TTL=3600

# MinIO Configuration (Object Storage)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=CHANGE_THIS_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_THIS_MINIO_SECRET_KEY_789
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=myerp-uploads
MINIO_REGION=us-east-1

# JWT Authentication
JWT_SECRET=CHANGE_THIS_JWT_SECRET_VERY_LONG_AND_RANDOM_STRING_ABC123
JWT_EXPIRY=1h
REFRESH_TOKEN_SECRET=CHANGE_THIS_REFRESH_TOKEN_SECRET_ALSO_VERY_LONG_DEF456
REFRESH_TOKEN_EXPIRY=7d

# Session Configuration
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_GHI789
SESSION_MAX_AGE=86400000

# Email Configuration (Production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=MyERP System

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=/var/log/myerp

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# PDF Generation
PDF_STORAGE_PATH=/tmp/pdfs
PDF_CLEANUP_INTERVAL=3600000

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9091

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD_JKL012

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=myerp-backups
BACKUP_ENCRYPTION_KEY=CHANGE_THIS_BACKUP_ENCRYPTION_KEY

# Security
BCRYPT_ROUNDS=12
ALLOWED_ORIGINS=https://your-domain.com
SECURE_COOKIES=true
TRUST_PROXY=true
HELMET_ENABLED=true

# Cloudflare Configuration (if using Cloudflare)
# Set to 'true' if using Cloudflare proxy
USE_CLOUDFLARE=true

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Feature Flags
FEATURE_MULTI_LANGUAGE=false
FEATURE_ADVANCED_REPORTING=false
FEATURE_CUSTOMER_PORTAL=false
FEATURE_AI_INSIGHTS=false

# External Services (Optional)
GOOGLE_MAPS_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
SENTRY_DSN=
SLACK_WEBHOOK_URL=

# Development Tools (Disabled in Production)
SWAGGER_ENABLED=false
GRAPHQL_PLAYGROUND_ENABLED=false
SEED_DATABASE=false
